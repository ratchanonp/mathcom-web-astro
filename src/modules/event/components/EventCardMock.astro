---
import { format } from "date-fns";

const { event } = Astro.props;
---

<div
	class="border-gray group grid min-w-20 overflow-clip border-2 shadow-lg transition-all duration-200 hover:scale-105 md:basis-1/3 lg:basis-1/5"
>
	<div class="flex w-full flex-col gap-2.5">
		<div
			class="flex h-24 w-full flex-col gap-2.5 bg-gray-800 p-4 group-hover:bg-yellow-400 group-hover:text-slate-800"
		>
			<p class="text-md inline-flex w-fit font-kanit text-xl font-semibold text-white group-hover:text-slate-800">
				{format(event.event_start, "dd MMM yyyy")}
			</p>
			<p class="inline-flex w-fit font-kanit text-sm text-white group-hover:text-slate-800">
				{format(event.event_start, "hh:mm")} -{" "}
				{format(event.event_end, "hh:mm a")}
			</p>
		</div>
		<h2 class="h-full w-full p-4 font-kanit text-slate-800">
			{event.title}
		</h2>
		<div class="grid gap-2.5 p-4">
			<div class="flex flex-col space-y-1">
				<p class="w-fit rounded-full bg-yellow-300 px-2.5 text-sm">
					{event.category}
				</p>
			</div>
		</div>
	</div>
</div>
