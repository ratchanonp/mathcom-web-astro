---
import { EventAPI } from "@/libs/api/event";
import EventCardMock from "./EventCardMock.astro";

const eventAPI = new EventAPI();
const events = await eventAPI.getEventsServer(undefined, 3);
---

<div class="flex justify-center mt-10 gap-2.5">
    {events.map((event: any) => <EventCardMock key={event.id} event={event} />)}
</div>
