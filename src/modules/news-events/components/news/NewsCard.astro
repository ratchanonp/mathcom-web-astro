---
const { news } = Astro.props
const { title, thumbnail, date, slug } = news

import { format } from "date-fns";
---
<a 
    href={`/posts/${slug}`}
    class="grid grid-cols-3 border border-gray-200 shadow-md">
    <div class="col-span-1">
        <img
            src={thumbnail}
            alt={thumbnail}
            class=" w-96 h-auto aspect-square object-cover"
        />
    </div>
    <div class="col-span-2 p-5 flex flex-col h-full justify-between">
        <h3 class="text-xl font-kanit text-slate-800">
            {title}
        </h3>
        <p class="mt-3 text-light text-slate-300">
            {format(date, "MMM dd, yyyy")}
        </p>
    </div>
</a>
