---
import MathComLogo from "@/assets/img/logo/MathComLogo.png";
import Facebook from "@/assets/img/socials/facebook.png";
import Instagram from "@/assets/img/socials/instagram.png";
import Linkedin from "@/assets/img/socials/linkedin.png";
import X from "@/assets/img/socials/x.png";
import Youtube from "@/assets/img/socials/youtube.png";
import { Picture } from "astro:assets";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { PhoneIcon, PrinterIcon } from "@heroicons/react/24/solid";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="w-full bg-gray-950 py-10">
	<div class="mx-auto max-w-7xl space-y-10 px-5">
		<div class="flex flex-col space-y-10 md:flex-row md:space-x-5 md:space-y-0">
			<div class="w-full space-y-5 md:w-[60%]">
				<div class="flex items-center">
					<Picture
						format="webp"
						loading="lazy"
						decoding="async"
						class="mr-5 aspect-auto h-[60px] w-auto md:h-[90px]"
						src={MathComLogo}
						alt="MathComLogo"
					/>
					<div class="flex h-fit flex-col justify-center space-y-1 font-kanit">
						<p class="font-semibold text-white md:text-xl">
							{t("nav.department")}
							{t("nav.mathematics")}
							{t("nav.and")}
							<br />
							{t("nav.computer_science")}
						</p>
						<p class="text-sm font-medium text-gray-300 md:text-base">{t("footbar.faculty_of_science")}</p>
					</div>
				</div>
				<p class="text-center font-sarabun text-sm leading-7 text-gray-300 md:text-left md:text-base">
					{t("nav.department")}{t("nav.mathematics")}{t("nav.and")}{t("nav.computer_science")}<br />
					{t("footbar.faculty_of_science")}
					{t("footbar.chulalongkorn_university")}<br />
					{t("footbar.address")}<br />
				</p>
			</div>
			<div class="flex w-full flex-col text-center font-kanit text-white md:w-[20%] md:text-right">
				<h3 class="text-xl font-semibold uppercase underline decoration-primary decoration-4">
					{t("footbar.get_in_touch")}
				</h3>
				<ul class="font-gray-700 mt-3 space-y-3">
					<li class="">
						<a href="https://maps.app.goo.gl/Un4zZWC7xeFMYPQz7">{t("footbar.find_us")}</a>
					</li>
					<li class=""><a href="/administration">{t("footbar.contact_us")}</a></li>
					<li class="">
						<a href="mailto:qq.panmas@gmail.com">{t("footbar.webmaster")}</a>
					</li>
				</ul>
			</div>
			<div class="flex w-full flex-col text-center font-kanit text-white md:w-[20%] md:text-right">
				<h3 class="text-xl font-semibold uppercase underline decoration-primary decoration-4">
					{t("footbar.quick_links")}
				</h3>
				<ul class="font-gray-700 mt-3 space-y-3">
					<li class="">
						<a href="https://www.chula.ac.th/en/">{t("footbar.chulalongkorn_university")}</a>
					</li>
					<li class="">
						<a href="https://www.chula.ac.th/contact/map-and-directions/">{t("footbar.campus_map")}</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="flex w-full flex-col items-center space-y-10 md:flex-row md:justify-between md:space-y-0">
			<div class="space-y-2">
				<div class="flex">
					<div class="mr-2 flex h-6 w-6 items-center justify-center bg-white">
						<PhoneIcon className="h-4 w-4" />
					</div>
					<a href="" class="font-kanit font-light text-white">+66(0)2-218-5141-2</a>
				</div>
				<div class="flex">
					<div class="mr-2 flex h-6 w-6 items-center justify-center bg-white">
						<PrinterIcon className="h-4 w-4" />
					</div>
					<a href="" class="font-kanit font-light text-white">+66(0)2-255-2287</a>
				</div>
			</div>
			<div class="flex justify-center space-x-5">
				<a href="https://twitter.com/ChulalongkornU">
					<Picture
						format="webp"
						loading="lazy"
						decoding="async"
						class="aspect-square h-7 w-7 object-cover"
						src={X}
						alt="X"
					/>
				</a>
				<a href="https://www.facebook.com/MathComSciCU">
					<Picture
						format="webp"
						loading="lazy"
						decoding="async"
						class="aspect-square h-7 w-7 object-cover"
						src={Facebook}
						alt="Facebook"
					/>
				</a>
				<a href="https://www.youtube.com/user/chulauniversity">
					<Picture
						format="webp"
						loading="lazy"
						decoding="async"
						class="aspect-square h-7 w-7 object-cover"
						src={Youtube}
						alt="Youtube"
					/>
				</a>
				<a href="https://www.instagram.com/mathcom_cu/">
					<Picture
						format="webp"
						loading="lazy"
						decoding="async"
						class="aspect-square h-7 w-7 object-cover"
						src={Instagram}
						alt="Instagram"
					/>
				</a>
				<a href="https://www.linkedin.com/school/chulalongkornuniversity/">
					<Picture
						format="webp"
						loading="lazy"
						decoding="async"
						class="aspect-square h-7 w-7 object-cover"
						src={Linkedin}
						alt="Linkedin"
					/>
				</a>
			</div>
		</div>
	</div>
</footer>
