---
interface Props {
	title: string;
	subtitle?: string;
}
const { title, subtitle } = Astro.props;
---

<header
	class="h-40 bg-black/50 bg-[url('/mhvh/MHVH-Corner.jpg')] bg-cover bg-[center_50%] bg-no-repeat bg-blend-darken [clip-path:polygon(0_0,100%_0,100%_80%,0_100%)] lg:h-80"
>
	<div class="mx-auto flex h-full max-w-screen-xl flex-col items-start justify-center space-y-5 px-5">
		<h1 class="text-left font-kanit text-2xl font-semibold text-white lg:text-6xl" set:html={title} />
		<h2 class="font-kanit text-white lg:text-2xl">{subtitle}</h2>
	</div>
</header>
