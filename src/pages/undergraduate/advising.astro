---
import Hero from "@/common/components/Hero.astro";
import { Table, TableBody, TableCell, TableHead, TableHeader, TableRow } from "@/components/ui/table";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { CheckIcon } from "@heroicons/react/24/solid";
---

<BaseLayout title="Undergraduate Advising">
	<Hero title="Undergraduate Advising" />
	<main class="mx-auto mb-20 max-w-screen-xl space-y-10 p-5">
		<section class="space-y-5">
			<h2 class="font-kanit text-3xl font-semibold">Scholarships</h2>
			<p>
				Chulalongkorn University has various scholarships to make education accessible and affordable for
				students. Our scholarships provide more opportunities for both undergraduate and graduate students.
			</p>
		</section>
		<section class="space-y-5">
			<h2 class="font-kanit text-3xl font-semibold">Scholarships for Undergraduate Student</h2>
			<p>
				Our department has many scholarships from Chulalongkorn University and external supports. We encourage
				students with great academic potential to pursue their study in mathematics and computer science.
			</p>

			<Table>
				<TableHeader>
					<TableRow>
						<TableHead>Scholarships</TableHead>
						<TableHead>Tuition Fee</TableHead>
						<TableHead>Allowance</TableHead>
						<TableHead>Link</TableHead>
					</TableRow>
				</TableHeader>
				<TableBody>
					<TableRow>
						<TableCell>His Royal Highness Crown Prince Maha Vajiralongkorn Fund</TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell
							><a
								class="hover:underline"
								href="https://www.acad.sc.chula.ac.th/scholarship-detail.php?id=71&type=6"
								target="_blank"
								rel="noopener noreferrer"
								>https://www.acad.sc.chula.ac.th/scholarship-detail.php?id=71&type=6</a
							></TableCell
						>
					</TableRow>
					<TableRow>
						<TableCell>Honor Programme Scholarship</TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell />
					</TableRow>
					<TableRow>
						<TableCell
							>Development and Promotion of Science and Technology Talents Project, Thai government
							scholarship</TableCell
						>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell
							><a
								class="hover:underline"
								href="https://www.acad.sc.chula.ac.th/scholarship-detail.php?id=71&type=6"
								target="_blank"
								rel="noopener noreferrer"
								>https://www.acad.sc.chula.ac.th/scholarship-detail.php?id=71&type=6</a
							></TableCell
						>
					</TableRow>
					<TableRow>
						<TableCell
							>Promotion of Science and Mathematics Talented Teachers, Thai government scholarship</TableCell
						>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell />
					</TableRow>
					<TableRow>
						<TableCell>Science Achievement Scholarship of Thailand</TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell><CheckIcon className="h-5 w-5 text-green-500" /></TableCell>
						<TableCell
							><a
								class="hover:underline"
								href="https://www.acad.sc.chula.ac.th/scholarship-detail.php?id=71&type=6"
								target="_blank"
								rel="noopener noreferrer"
								>https://www.acad.sc.chula.ac.th/scholarship-detail.php?id=71&type=6</a
							></TableCell
						>
					</TableRow>
				</TableBody>
			</Table>
		</section>
	</main>
</BaseLayout>
