---
import Hero from "@/common/components/Hero.astro";
import SideBarUnGrad from "@/common/components/SIdebar/SideBar.astro";
import Render from "@/common/page/render.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

import { createSidebarItemsUndergraduate, programPageID } from "@/libs/const";
---

<BaseLayout title="Overview | Undergraduate | Mathematics">
    <Hero title="Mathematics" subtitle="Bachelor of Science" />

    <div class="grid md:grid-cols-4 max-w-screen-xl mx-auto gap-5 md:gap-10 mb-20 p-5">
        <aside class="col-span-1">
            <nav class="bg-gray-50 sticky top-32">
                <SideBarUnGrad navItems={createSidebarItemsUndergraduate("mathematics")} />
            </nav>
        </aside>
        <main class="md:col-span-3 grid overflow-x-auto">
            <Render pageId={programPageID.undergradudate.mathematics.overview.en} />
        </main>
    </div>
</BaseLayout>
