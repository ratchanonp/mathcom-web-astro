---
import Hero from "@/common/components/Hero.astro";
import SideBarGrad from "@/common/components/SIdebar/SideBarGrad.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

import { CourseAPI, CourseName } from "@/libs/api/course";
const courseAPI = new CourseAPI();
const content = await courseAPI.getCourse(CourseName.AMCS, "academic_english");
---

<BaseLayout title="Applied Mathematics and Computational Science Program">
    <Hero
        title="Applied Mathematics and Computational Science (M.Sc & Ph.D.)"
    />

    <div class="grid md:grid-cols-4 max-w-screen-xl mx-auto gap-10 mb-20 p-5">
        <aside class="col-span-1">
            <SideBarGrad />
        </aside>
        <main class="md:col-span-3 my-5 grid space-y-5 overflow-x-auto">
            <h2 class="font-kanit text-5xl font-semibold">Academics</h2>
            <div set:html={content} />
        </main>
    </div>
</BaseLayout>
