---
import Hero from "@/common/components/Hero.astro";
import SideBarUnGrad from "@/common/components/SIdebar/SideBar.astro";
import Render from "@/common/page/render.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

import { createSidebarItemsGraduate, programPageID } from "@/libs/const";
---

<BaseLayout title="Overview | Graduate | Computer Science and Information Technology">
    <Hero title="Computer Science and Information Technology" subtitle="M.Sc & Ph.D." />

    <div class="grid md:grid-cols-4 max-w-screen-xl mx-auto gap-5 md:gap-10 mb-20 p-5">
        <aside class="col-span-1">
            <nav class="bg-gray-50 sticky top-32">
                <SideBarUnGrad navItems={createSidebarItemsGraduate("csit")} />
            </nav>
        </aside>
        <main class="md:col-span-3 grid overflow-x-auto">
            <Render pageId={programPageID.graduate.csit.overview.en} />
        </main>
    </div>
</BaseLayout>
