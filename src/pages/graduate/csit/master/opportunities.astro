---
import Hero from "@/common/components/Hero.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Computer Science and Information Technology (M.Sc.)">
    <Hero
        title="Computer Science and Information Technology (M.Sc.)" 
    />

    <div class="grid md:grid-cols-4 max-w-screen-xl mx-auto gap-10 mb-20 p-5">
        <aside>
            <nav>
                <ul class="bg-gray-100 font-kanit text-xl grid">
                    <a 
                        href="academics" 
                        class="p-5"
                    >
                        Academics
                    </a>
                    <a 
                        href="qualification" 
                        class="p-5"
                    >
                        Qualification
                    </a>
                    <a 
                        href="apply" 
                        class="p-5"
                    >
                        Apply
                    </a>
                    <a 
                        href="opportunities" 
                        class="p-5 border-l-8 border-yellow-400 underline decoration-4 decoration-yellow-400 bg-slate-900 text-white"
                    >
                        Opportunities
                    </a>
                    <a 
                        href="entrance-exam" 
                        class="p-5"
                    >
                        Extrance Examination
                    </a>
                </ul>
            </nav>
        </aside>
        <main class="md:col-span-3 my-5 space-y-10 font-sarabun">
            <h2 class="font-kanit font-semibold text-5xl">Opportunities</h2>
            <section class="space-y-5">
                <ol class="list-decimal list-inside">
                    <li>AI Scientists</li>
                    <li>Teachers or professors in schools, colleges, and universities.</li>
                    <li>Researchers in government and private organizations.</li>
                    <li>Startup business owners</li>
                    <li>Company employees who utilize computer technology</li>
                    <li>Consultants specializing in AI applications, for example, recommender systems, image processing, computer visions, etc.</li>
                </ol>
            </section>
        </main>
    </div>


</BaseLayout>