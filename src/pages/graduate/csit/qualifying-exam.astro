---
import Hero from "@/common/components/Hero.astro";
import SideBarGrad from "@/common/components/SIdebar/SideBarGrad.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

import { CourseAPI, CourseName } from "@/libs/api/course";
const courseAPI = new CourseAPI();
const content = await courseAPI.getCourse(
    CourseName.CSIT,
    "qualification_exam_english",
);
---

<BaseLayout title="Computer Science and Information Technology (M.Sc. & Ph.D.)">
    <Hero title="Computer Science and Information Technology (M.Sc. & Ph.D.)" />

    <div class="grid md:grid-cols-4 max-w-screen-xl mx-auto gap-10 mb-20 p-5">
        <aside>
            <SideBarGrad />
        </aside>
        <main
            class="md:col-span-3 my-5 space-y-10 font-sarabun overflow-x-auto"
        >
            <h2 class="font-kanit font-semibold text-5xl">
                Entrance Examination
            </h2>
            <div set:html={content} />
