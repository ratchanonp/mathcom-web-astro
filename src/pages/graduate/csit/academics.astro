---
import Hero from "@/common/components/Hero.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

import { CourseAPI, CourseName } from "@/libs/api/course";
const courseAPI = new CourseAPI();
const content = await courseAPI.getCourse(CourseName.CSIT, "academic_english");
---

<BaseLayout title="Computer Science and Information Technology (M.Sc. & Ph.D.)">
    <Hero title="Computer Science and Information Technology (M.Sc. & Ph.D.)" />

    <div class="grid md:grid-cols-4 max-w-screen-xl mx-auto gap-10 mb-20 p-5">
        <aside>
            <nav>
                <ul class="bg-gray-100 font-kanit text-xl grid">
                    <a
                        href="academics"
                        class="p-5 border-l-8 border-yellow-400 underline decoration-4 decoration-yellow-400 bg-slate-900 text-white"
                        >Academics</a
                    >
                    <a href="apply" class="p-5">Apply</a>
                    <a href="opportunities" class="p-5">Opportunities</a>
                    <a href="qualification" class="p-5">Qualification</a>
                    <a class="p-5" href="qualifying-exam">Qualifying Exam</a>
                </ul>
            </nav>
        </aside>
        <main
            class="md:col-span-3 my-5 space-y-10 font-sarabun overflow-x-auto"
        >
            <h2 class="font-kanit font-semibold text-5xl">Academics</h2>
            <div set:html={content} />
        </main>
    </div>
</BaseLayout>
