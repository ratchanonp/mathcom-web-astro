---
import Hero from "@/common/components/Hero.astro";
import SideBarUnGrad from "@/common/components/SIdebar/SideBar.astro";
import Render from "@/common/page/render.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { createSidebarItemsGraduate, programPageID } from "@/libs/const";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={t("program.graduate.mathematics.prospective_students.title")}>
	<Hero
		title={t("program.graduate.mathematics.prospective_students.hero.title")}
		subtitle={t("program.graduate.mathematics.prospective_students.hero.subTitle")}
	/>
	<div class="mx-auto mb-20 grid max-w-screen-xl grid-cols-1 gap-5 p-5 md:grid-cols-4 md:gap-10">
		<aside class="col-span-1">
			<nav class="sticky top-32 bg-gray-50">
				<SideBarUnGrad navItems={createSidebarItemsGraduate("mathematics", lang)} />
			</nav>
		</aside>
		<main class="grid overflow-x-auto font-sarabun md:col-span-3">
			<Render pageId={programPageID.graduate.mathematics.prospective_students.th} />
		</main>
	</div>
</BaseLayout>
