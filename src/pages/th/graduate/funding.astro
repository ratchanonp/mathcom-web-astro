} from "@/components/ui/table";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { CheckIcon } from "@heroicons/react/24/solid";
---

<BaseLayout title="Graduate Funding">
    <Hero title="Graduate Funding" />
